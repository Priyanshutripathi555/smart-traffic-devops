{
  "dashboard": {
    "id": null,
    "title": "Smart Traffic Monitoring",
    "tags": ["traffic", "prometheus", "devops"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "gauge",
        "title": "Total Vehicle Count",
        "targets": [
          {
            "expr": "traffic_total_vehicles",
            "legendFormat": "",
            "refId": "A"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 }
      },
      {
        "type": "bar gauge",
        "title": "Vehicles by Location",
        "targets": [
          {
            "expr": "sum by(location) (traffic_vehicle_count)",
            "refId": "A"
          }
        ],
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 6 }
      },
      {
        "type": "bar gauge",
        "title": "Vehicles by Signal Color",
        "targets": [
          {
            "expr": "sum by(signal) (traffic_vehicle_count)",
            "refId": "B"
          }
        ],
        "gridPos": { "x": 0, "y": 6, "w": 6, "h": 6 }
      },
      {
        "type": "stat",
        "title": "High Traffic Intersections (Vehicles > 70)",
        "targets": [
          {
            "expr": "count(traffic_vehicle_count > 70)",
            "refId": "C"
          }
        ],
        "gridPos": { "x": 6, "y": 6, "w": 6, "h": 6 }
      },
      {
        "type": "state-timeline",
        "title": "Current Signal Light States",
        "targets": [
          {
            "expr": "traffic_signal_state",
            "refId": "D"
          }
        ],
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 }
      }
    ]
  },
  "overwrite": true
}

